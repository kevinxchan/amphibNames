head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title File Uploader
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(href="./stylesheets/style.css", rel="stylesheet")
body
    .upload-box
        .container
            .row
                .col-xs-12
                    .panel.panel-default
                        .panel-body
                            span.glyphicon.glyphicon-cloud-upload(style="color: #05386B;")
                            br
                            br
                            button.btn.btn-lg.upload-btn(type="button") Upload File
                            input#upload-input(type="file", accept=".txt", name="upload")
                            br
                            br
                            .progress
                                .progress-bar(role="progressbar")
                            form(action="/query", method="POST")
                                input.input-lg#query-input(type="submit" value="Query")
    br
    script(src="https://code.jquery.com/jquery-2.2.0.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
    script(src="javascripts/upload.js")